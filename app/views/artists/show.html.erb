<p id="notice"><%= notice %></p>

<div id="image"class="container">
<p>
  <strong>Artist:</strong>
  <%= @artist.name %>
</p>

 <%= image_tag @artist.image.thumbnail%>

</div>
<br>
<div class="panel panel col-md-12">
  <div id="musics" onloadedmetadata=""class="panel-heading">Musics</div>

<div>
  <ul id="song_list">
    <% @artist.songs.each do |song| %>

    <li><%= song.name %> &nbsp;
      <button class="button" value="<%=song.id %>" onClick="deleteSong;">Delete</button>
    </li>
    <% end %>
</div>
  <div>
    <button class="delete_all"  onClick="deleteAll;">Delete All Songs</button>
  </div>
<br><br>
  <p> Add a new Song</p>


  <%= form_for [@artist, @artist.songs.new], html: { multipart:true } do |f| %>

  <div class="form-group">
    <label>Song name:</label>
    <%= f.text_field :name, class: "form-control" %>
    <input type="hidden" id="song_artist_id" value="<%= @artist.id %>" />
  </div>

  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
  <% end %>


  <br><br>
  <%= link_to "Delete Artist", artist_path(@artist.id), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-default"%>
